.container{
padding-top: 0rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f0145a;
  width: 100%;
  height: 300rpx;

}
.account-bg {
  width: 100%;
  height: 200rpx;
  
}
.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
}

.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.item-tj {
  color: gray;
  font-size: 25rpx;
  margin-left: 200rpx;
}

.person-line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}

.li {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  width: 92%;
  padding: 0 4%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.bg-gray{
    background-color: #ccc!important;
    border-bottom: 1rpx solid  #fff!important;
}

.li .icon-xiala ,.icon-shangjiantou {
  color: #999;
  font-size: 28rpx;
}

.gray {
  color: #8e8e8e;
}

.red {
  color: #fe2e2e;
}
.pro-item{
  overflow: hidden;
  margin: 2rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}
.pro-logo{
  float: left;
  width: 200rpx;
  height: 200rpx;
}

.pro-body{
  margin-left: 200rpx;
}

.pro-title{
  color: #212121;
  font-size: 34rpx;
  line-height: 1.5;
}

.pro-desc{
  font-size: 30rpx;
  color: #909a0a;
  line-height: 1.5;
}
.pro-footer{
  overflow: hidden;
}
